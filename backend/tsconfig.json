{
  "compilerOptions": {
    "target": "ES2022",
  "module": "NodeNext",
    "lib": [
      "ES2022"
    ],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  "moduleResolution": "nodenext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "__mocks__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "types": [
    "jest",
    "node"
  ]
}
